% styles/base-xetex.sty
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{../../styles/base}[2024/01/01 Base configuration for XeTeX]

% XeTeX 专用配置 - 更好的 Unicode 支持
\RequirePackage{fontspec}
\RequirePackage{xeCJK}  % 专门的中文支持

% 设置中文字体
\setCJKmainfont{STSong}  % macOS 上的中文字体
\setCJKsansfont{STHeiti}
\setCJKmonofont{STFangsong}

% 其他基础包
\RequirePackage{geometry}
\RequirePackage{setspace}
\RequirePackage{hyperref}
\RequirePackage{xcolor}
\RequirePackage{enumitem}
\RequirePackage{graphicx}
\RequirePackage{booktabs}
\RequirePackage{float}

% 页面设置
\geometry{a4paper, margin=1in}
\onehalfspacing

% 超链接设置
\hypersetup{
	colorlinks=true,
	linkcolor=blue,
	urlcolor=cyan,
	citecolor=magenta
}

% 列表设置
\setlist{nosep}

\endinput